@model PowerBI.Models.ReportRequest
@{
    ViewData["Title"] = "Agregar Reporte";
}

<h2>Agregar Reporte</h2>

<form asp-action="AddReport" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Nombre del Reporte</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>

    <div class="form-group">
        <label for="CategoryId">Categoría (opcional)</label>
        <select id="CategoryId" name="CategoryId" class="form-control">
            <option value="">Sin categoría</option>
            @if (ViewBag.Categories != null)
            {
                @foreach (var category in ViewBag.Categories as List<PowerBI.Models.Category>)
                {
                    <option value="@category.idCategory">@category.Name</option>
                }
            }
        </select>
        <small class="form-text text-muted">Puede dejarlo en "Sin categoría" si no desea asignar una categoría.</small>
    </div>

    <div class="form-group">
        <label for="PublicLink">URL del Reporte de Power BI</label>
        <input type="url" class="form-control" id="PublicLink" name="PublicLink" placeholder="Ingrese la URL pública del reporte" />
    </div>

    <div class="form-group">
        <label for="File">Subir Archivo (.pbix)</label>
        <input type="file" class="form-control" id="File" name="File" accept=".pbix" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Agregar Reporte</button>
</form>
